<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".express.PaymentMenuFragment">

    <com.spreedly.express.PaymentMenuView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/express_payment_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:orientation="vertical"
        app:includeBillingAddressOverride="true"
        app:includeShippingAddressOverride="false"
        app:paymentType="any" />

</FrameLayout>